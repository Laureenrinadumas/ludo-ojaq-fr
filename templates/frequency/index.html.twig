{% extends 'base.html.twig' %}

{% block title %}Index fréquence{% endblock %}

{% block body %}
    <h1>Index des fréquences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date d'utilisation</th>
                <th>Tour de jeu</th>
                <th>Score</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for frequency in frequencies %}
            <tr>
                <td>{{ frequency.id }}</td>
                <td>{{ frequency.useGame ? frequency.useGame|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ frequency.gameRound }}</td>
                <td>{{ frequency.score }}</td>
                <td>
                    <a href="{{ path('frequency_show', {'id': frequency.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('frequency_edit', {'id': frequency.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Oups ! pas d'enregistrement pas ici.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('frequency_new') }}">Créer une nouvelle fréquence</a>
{% endblock %}
