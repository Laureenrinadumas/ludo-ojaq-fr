{% extends 'base.html.twig' %}

{% block title %}Fréquence de jeu{% endblock %}

{% block body %}
    <h1>Fréquence de jeu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ frequency.id }}</td>
            </tr>
            <tr>
                <th>Date de la dernière partie</th>
                <td>{{ frequency.useGame ? frequency.useGame|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tour de jeu</th>
                <td>{{ frequency.gameRound }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ frequency.score }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('frequency_index') }}">Retour à la liste</a>

    <a href="{{ path('frequency_edit', {'id': frequency.id}) }}">Éditer</a>

    {{ include('frequency/_delete_form.html.twig') }}
{% endblock %}
