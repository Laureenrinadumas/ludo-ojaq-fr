{% extends 'base.html.twig' %}

{% block title %}Index des catégories{% endblock %}

{% block body %}
    <h1>Index des catégories</h1>

    <table class="table  border-secondary">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Oups ! pas d'enregistrement par ici.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Créer une nouvelle catégorie</a>
{% endblock %}
