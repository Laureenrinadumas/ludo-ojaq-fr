{% extends 'base.html.twig' %}

{% block title %}Index complexité{% endblock %}

{% block body %}
    <h1>Index des complexités</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du niveau</th>
                <th>Explication</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for complexity in complexities %}
            <tr>
                <td>{{ complexity.id }}</td>
                <td>{{ complexity.nameLevel }}</td>

                <td>{{ complexity.explanation }}</td>
                <td>
                    <a href="{{ path('complexity_show', {'id': complexity.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('complexity_edit', {'id': complexity.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Oups ! pas d'enregistrement par ici.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('complexity_new') }}">Créer une nouvelle complexité</a>
{% endblock %}
