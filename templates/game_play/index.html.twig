{% extends 'base.html.twig' %}

{% block title %}GamePlay index{% endblock %}

{% block body %}
    <h1>GamePlay index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NamePlay</th>
                <th>Definition</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game_play in game_plays %}
            <tr>
                <td>{{ game_play.id }}</td>
                <td>{{ game_play.namePlay }}</td>
                <td>{{ game_play.definition }}</td>
                <td>
                    <a href="{{ path('game_play_show', {'id': game_play.id}) }}">show</a>
                    <a href="{{ path('game_play_edit', {'id': game_play.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_play_new') }}">Create new</a>
{% endblock %}
