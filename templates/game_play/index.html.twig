{% extends 'base.html.twig' %}

{% block title %}Index mécanique de jeu{% endblock %}

{% block body %}
    <h1>Index des mécaniques de jeu</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mécanique de jeu</th>
                <th>Définition</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game_play in game_plays %}
            <tr>
                <td>{{ game_play.id }}</td>
                <td>{{ game_play.namePlay }}</td>
                <td>{{ game_play.definition }}</td>
                <td>
                    <a href="{{ path('game_play_show', {'id': game_play.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('game_play_edit', {'id': game_play.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Oups ! pas d'enregistrement par ici.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_play_new') }}">Créer une nouvelle mécanique de jeu</a>
{% endblock %}
