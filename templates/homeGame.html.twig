{% extends'base.html.twig' %}

{% block body %}
    <div class="row d-flex justify-content-center">

        {% for game in games %}
            <div class="card-deck col-md-4">
            <div class="card bg-dark m-5" style="width: 16rem;">
                <img src="{{ game.poster }}" class="card-img-top" alt="{{ game.name }}">
                <div class="card-body text-info">
                    <h5 class="card-title">{{ game.name }}</h5>
                    <p class="card-text">{{ game.rule }}</p>
                </div>
                <ul class="list-group list-group-flush list-color">
                    <li class="list-group-item text-info">Créé en {{ game.creationDate|date ("Y") }}</li>
                    <li class="list-group-item text-info">A partir de +{{ game.age }} ans</li>
                    <li class="list-group-item text-info">{{ game.complexity }}</li>
                    <li class="list-group-item text-info">Durée de la partie environ : {{ game.gameTimeMin ? game.gameTimeMin|date('H:i') : '' }} à {{ game.gameTimeMax ? game.gameTimeMax|date('H:i') : '' }}</li>
                    <li class="list-group-item text-info"> De {{ game.numberPlayerMin }} à {{ game.numberPlayerMax }} joueurs</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link text-info">En savoir plus</a>
                </div>
            </div>
            </div>
        {% endfor %}


    </div>
{% endblock %}
