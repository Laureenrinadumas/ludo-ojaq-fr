{% extends 'base.html.twig' %}

{% block title %}Index jeux{% endblock %}

{% block body %}

<div class="row mt-5">
    <div class="col-12">
        <div class="card text-dark bg-dark mr-5 ml-5">
            <div class="card-header text-center">
                <h1>Liste des jeux</h1>
                <div class="card-body">

                    <table class="table table-bordered border-secondary">

        <thead>
            <tr class="bg-warning">
                <th>Id</th>
                <th>Nom</th>
                <th>Règle</th>
                <th>+Age</th>
                <th>Date de Création</th>
                <th>Catégorie</th>
                <th>Complexité du jeu</th>
                <th>Temps minimum</th>
                <th>Temps maximum</th>
                <th>Nombre de joueur minimum</th>
                <th>Nombre de joueur maximum</th>
                <th>Mécanique de jeu</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr class="text-white">
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.rule }}</td>
                <td>{{ game.age }}</td>
                <td>{{ game.creationDate|date('Y') }}</td>
                <td>{{ game.category }}</td>
                <td>{{ game.complexity }}</td>
                <td>{{ game.gameTimeMin ? game.gameTimeMin|date('H:i:s') : '' }}</td>
                <td>{{ game.gameTimeMax ? game.gameTimeMax|date('H:i:s') : '' }}</td>
                <td>{{ game.numberPlayerMin }}</td>
                <td>{{ game.numberPlayerMax }}</td>
                <td>
                    {% for gamePlay in game.gamePlays %}
                   <li>{{ gamePlay.namePlay }}</li>
                    {% endfor %}
                </td>



                <td>
                    <a href="{{ path('game_show', {'id': game.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('game_edit', {'id': game.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Oups ! pas d'enregistrement par ici.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    <a href="{{ path('game_new') }}">Créer un nouveau jeu</a>
{% endblock %}
