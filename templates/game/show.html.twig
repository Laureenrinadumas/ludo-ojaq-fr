{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Rule</th>
                <td>{{ game.rule }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ game.age }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ game.poster }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ game.creationDate|date ('Y') }}</td>
            </tr>
            <tr>
                <th>GameTimeMin</th>
                <td>{{ game.gameTimeMin ? game.gameTimeMin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>GameTimeMax</th>
                <td>{{ game.gameTimeMax ? game.gameTimeMax|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumberPlayerMin</th>
                <td>{{ game.numberPlayerMin }}</td>
            </tr>
            <tr>
                <th>NumberPlayerMax</th>
                <td>{{ game.numberPlayerMax }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('game_index') }}">back to list</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
