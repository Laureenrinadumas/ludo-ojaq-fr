{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<div class="form-group m-3">
    <div class="row">
        <div class="col-md-4">{{ form_row (form.name) }}</div>
        <div class="col-md-4">{{ form_row (form.creationDate) }}</div>
        <div class="col-md-4">{{ form_row (form.poster) }}</div>
    </div>
    <div class="row">
        <div class="col-md-6">{{ form_row (form.rule) }}</div>
        <div class="col-md-6">{{ form_row (form.gamePlay) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row (form.age) }}</div>
        <div class="col-md-4">{{ form_row (form.category) }}</div>
        <div class="col-md-4">{{ form_row (form.complexity) }}</div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">{{ form_row (form.gameTimeMin) }}</div>
        <div class="col-md-3">{{ form_row (form.gameTimeMax) }}</div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">{{ form_row (form.numberPlayerMin) }}</div>
        <div class="col-md-3">{{ form_row (form.numberPlayerMax) }}</div>
        <div class="col-md-3"></div>
    </div>

</div>
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
