{% extends 'base.html.twig' %}

{% block title %}Index Liens{% endblock %}

{% block body %}
    <h1>Index des liens</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lien sur internet</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td>{{ link.id }}</td>
                <td>{{ link.address }}</td>
                <td>{{ link.picture }}</td>
                <td>
                    <a href="{{ path('link_show', {'id': link.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('link_edit', {'id': link.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Oups ! pas d'enregistrement par ici.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('link_new') }}">Cr√©er un nouveau lien</a>
{% endblock %}
